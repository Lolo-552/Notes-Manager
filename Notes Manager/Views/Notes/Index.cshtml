@model IEnumerable<Notes_Manager.Models.Notes>

@{
    ViewData["Title"] = "Index";
}

<h1>Twoje Notatki</h1>

<p>
    <a asp-action="Create" class="action-button">Dodaj</a>
    <a asp-controller="Home" asp-action="Index" class="action-button">Wstecz</a>
    <form>
        <p>
            Title: <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>
        <select name="Category" onchange="this.form.submit()">
            @foreach(var item in Model)
            {
                <option>@item.Category.Name</option>
            }
        </select>
    </form>
</p>
<div class="d-flex flex-wrap justify-content-center gap-3">
    @foreach (var item in Model)
    {

        <div class="note">
            <div style="position: absolute; top: 4px; right: 10px;">
                <p class="btn-sm btn-light" style="width: fit-content; display: inline-block;">@Html.DisplayFor(modelItem => item.Category.Name)</p>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-dark">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-danger">Usuń</a>
            </div>
            <a asp-action="Details" asp-route-id="@item.Id">
                <p>@Html.DisplayFor(modelItem => item.Title)</p>
                <p>@Html.DisplayFor(modelItem => item.Content)</p>
            </a>
        </div>
    }
</div>
